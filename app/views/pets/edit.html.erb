<section class="page-template-1" id="pet-edit-page">
  <section id=current-pet-details>
    <h1><%= @pet.name %></h1>
    <p><%= @pet.description %></p>
    <p><%= @pet.age %></p>
    <p><%= @pet.sex %></p>
    <img src="<%= @pet.image %>" >
    <p><%= @pet.shelter.title %></p>
  </section>
  <section>
    <%= form_tag "/pets/#{@pet.id}", id: "pet-edit-form", method: :patch do %>
      <%= label_tag :name %>
      <%= text_field_tag :name %>

      <%= label_tag :description %>
      <%= text_field_tag :description %>

      <%= label_tag :age %>
      <%= text_field_tag :age %>

      <%= label_tag :sex %>
      <%= text_field_tag :sex %>
      
      <%= label_tag :image %>
      <%= text_field_tag :image %>

      <%= submit_tag "Update"%>
    <% end %>
  </section>
</section>