<section class="page-template-1">
  <section class="pet-content">
    <% @pets.each do |pet| %>
      <article id="pet-<%= pet.id %>">
        <h2><%= link_to pet.name, "/pets/#{pet.id}" %></h2>
        <img src=<%= pet.image %> />
        <p><%= pet.age %></p>
        <p><%= pet.sex %></p>
        <%= link_to pet.shelter.title, "/shelters/#{pet.shelter.id}" %>
        <%= link_to 'Edit', "/pets/#{pet.id}/edit" %>
        <%= link_to 'Delete', "/pets/#{pet.id}", method: :delete %>
      </article>
    <% end %>
  </section>
</section>